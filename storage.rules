rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures: Users can upload/manage their own profile pictures
    match /profile-pictures/{userId}/{fileName} {
      // Allow users to read any profile picture
      allow read: if request.auth != null;
      
      // Allow users to upload images to their own folder only
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.contentType.matches('image/.*')
        && request.resource.size < 1024 * 1024; // 1MB limit for profile pictures
      
      // Allow users to delete their own profile pictures
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Inventory images: Admins can upload images for any user's inventory
    match /inventory-images/{userId}/{fileName} {
      // Allow authenticated users to read inventory images
      allow read: if request.auth != null;
      
      // Allow authenticated users to upload images (admins will upload for users)
      allow write: if request.auth != null 
        && request.resource.contentType.matches('image/.*')
        && request.resource.size < 1024 * 1024; // 1MB limit for inventory images
      
      // Allow authenticated users to delete inventory images
      allow delete: if request.auth != null;
    }
    
    // Shipment labels: Users can upload labels for their shipment requests
    match /shipment-labels/{userId}/{fileName} {
      // Allow authenticated users to read shipment labels
      allow read: if request.auth != null;
      
      // Allow authenticated users to upload labels (images or PDFs)
      allow write: if request.auth != null 
        && (request.resource.contentType.matches('image/.*') || request.resource.contentType == 'application/pdf')
        && request.resource.size < 10 * 1024 * 1024; // 10MB limit for shipment labels
      
      // Allow authenticated users to delete their own labels
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Document requests: Admins can upload documents for users
    match /documentRequests/{userId}/{requestId}/{fileName} {
      // Allow authenticated users to read document requests
      allow read: if request.auth != null;
      
      // Allow authenticated users to upload documents (PDF, DOC, DOCX, TXT)
      allow write: if request.auth != null 
        && (
          request.resource.contentType == 'application/pdf' ||
          request.resource.contentType == 'application/msword' ||
          request.resource.contentType == 'application/vnd.openxmlformats-officedocument.wordprocessingml.document' ||
          request.resource.contentType == 'text/plain'
        )
        && request.resource.size < 50 * 1024 * 1024; // 50MB limit for documents
      
      // Allow authenticated users to delete documents
      allow delete: if request.auth != null;
    }
    
    // Allow authenticated users to upload and read PDFs from any path
    // This allows the folder structure: Year/Month/Client Name/Date/FileName
    // to work with spaces and special characters in file names
    match /{allPaths=**} {
      // Allow authenticated users to read any file
      allow read: if request.auth != null;
      
      // Allow authenticated users to upload PDFs (only PDFs)
      // Files are automatically compressed but no size limit enforced
      // Firebase Storage default limit is 32MB, but we allow up to 100MB for large files
      allow write: if request.auth != null 
        && request.resource.contentType == 'application/pdf'
        && request.resource.size < 100 * 1024 * 1024; // 100MB limit
      
      // Allow authenticated users to delete files
      allow delete: if request.auth != null;
    }
  }
}
